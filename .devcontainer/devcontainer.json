{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postStartCommand": "flutter pub get",
    "postCreateCommand": "shorebird doctor",
    "forwardPorts": [
        3000
    ],
    "name": "QuestKeeper Dev Container",
    "customizations": {
        "vscode": {
            "settings": {
                "workbench.colorCustomizations": {
                    "titleBar.activeForeground": "#a86fd1"
                }
            },
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter",
                "esbenp.prettier-vscode",
                "robert-brunhage.flutter-riverpod-snippets",
                "hzgood.dart-data-class-generator",
                "donjayamanne.git-extension-pack",
                "redhat.vscode-yaml",
                "Gruntfuggly.todo-tree",
                "redhat.vscode-xml",
                "ms-azuretools.vscode-docker",
                "denoland.vscode-deno"
            ]
        }
    }
}